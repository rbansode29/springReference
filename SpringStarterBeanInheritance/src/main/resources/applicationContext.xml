<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.2.xsd">

	<bean id="mainBean" class="com.springstarter.model.Person"
		abstract="true">
		<property name="firstName" value="Ravindra" />
		<property name="middleName" value="Radhakisan" />
		<property name="lastName" value="Bansode" />
	</bean>

	<bean id="childBean1" class="com.springstarter.model.Student"
		parent="mainBean">
		<property name="firstName" value="A" />
		<property name="middleName" value="B" />
		<property name="lastName" value="C" />
		<property name="address" value="Pune"></property>
	</bean>
	
	
	<bean id="singletonWithAbstract"
		class="com.springstarter.model.SingletonWithAbstract" abstract="true">
		<property name="singletonWithAbstract" value="yes" />
	</bean>
</beans>