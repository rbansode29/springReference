<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.2.xsd">

	<bean
		class="com.springstarter.model.InstanceValidationBeanPostProcessor">
		<property name="order" value="1" />
	</bean>

	<bean id="instanceValidatorImpl"
		class="com.springstarter.model.InstanceValidatorImpl"
		scope="prototype" init-method="init" destroy-method="dispose">
		<property name="propertyName" value="defined"></property>
	</bean>

	<bean
		class="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer">
		<property name="locations" value="classpath:jdbc.properties"></property>
		<property name="properties">
			<!-- value="classpath:classname.properties" /> -->
			<value>custom.strategy.class=com.springstarter.model.DefaultStrategy
			</value>
		</property>

	</bean>

	<bean id="dataSource"
		class="com.springstarter.model.BasicDataSource">
		<property name="driverClassName"
			value="${jdbc.driverClassName}" />
		<property name="url" value="${jdbc.url}" />
		<property name="username" value="${jdbc.username}" />
		<property name="password" value="${jdbc.password}" />
	</bean>

	<bean id="serviceStrategy" class="${custom.strategy.class}" />

</beans>